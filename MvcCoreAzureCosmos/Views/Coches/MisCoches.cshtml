@model IEnumerable<MvcCoreAzureCosmos.Models.Coche>

@{
    ViewData["Title"] = "MisCoches";
}

<h1>Mis Coches de Cosmos</h1>

<p>
    <a asp-controller="Coches" 
        asp-action="Create"
        class="btn btn-success">
        Create New
    </a>
</p>

@if(Model.Count() > 0){
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Marca)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Modelo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Imagen)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Marca)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Modelo)
                    </td>
                    <td>
                        <img src="@item.Imagen" style="height:100px; width:100px" />
                    </td>
                    <td>
                        <a asp-controller="Coches"
                           asp-action="Details"
                           asp-route-id="@item.Id"
                           class="btn btn-info">
                            Details
                        </a>
                        <a asp-controller="Coches"
                           asp-action="Edit"
                           asp-route-id="@item.Id"
                           class="btn btn-warning">
                            Edit
                        </a>
                        <a asp-controller="Coches"
                           asp-action="Delete"
                           asp-route-id="@item.Id"
                           class="btn btn-danger">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}else{
    <h2 style="color:red">No hay coches</h2>
}

